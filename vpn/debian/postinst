#!/bin/sh

set -e

case "$1" in
    configure)
        /usr/bin/init-pki.sh
        /usr/bin/generate-server-keys.sh
        /usr/bin/setup-vpn-server.sh
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

exit 0
