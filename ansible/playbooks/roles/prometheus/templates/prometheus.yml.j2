global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'ca_system_metrics'
    static_configs:
      - targets: ['{{ hostvars["ca_server"]["ansible_host"] }}:{{ node_exporter_port }}']

  - job_name: 'vpn_system_metrics'
    static_configs:
      - targets: ['{{ hostvars["vpn_server"]["ansible_host"] }}:{{ node_exporter_port }}']
