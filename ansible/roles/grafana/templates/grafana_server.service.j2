[Unit]
Description=Grafana Server
Wants=network-online.target
After=network-online.target

[Service]
User=root
Group=grafana
Type=simple
ExecStart=/usr/sbin/grafana-server --config={{ grafana_config }}/grafana.ini --homepath=/usr/share/grafana
Restart=on-failure

[Install]
WantedBy=multi-user.target
